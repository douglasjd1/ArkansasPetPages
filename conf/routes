# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /breed/:id                  controllers.BreedController.getBreed(id:Integer)
GET     /breeds                     controllers.BreedController.getBreeds
GET     /newBreed                   controllers.BreedController.getNewBreed
POST    /newBreed                   controllers.BreedController.postNewBreed

POST    /newPersonality             controllers.BreedController.postNewPersonality
POST    /newColor                   controllers.BreedController.postNewColor
POST    /newBreedPersonality        controllers.BreedController.postNewBreedPersonality
POST    /newBreedColor              controllers.BreedController.postNewBreedColor
GET     /newPersonality             controllers.BreedController.getNewPersonality
GET     /newColor                   controllers.BreedController.getNewColor
GET     /newBreedPersonality        controllers.BreedController.getNewBreedPersonality
GET     /newBreedColor              controllers.BreedController.getNewBreedColor
GET     /colors                     controllers.BreedController.getColors

POST    /newDogPersonality          controllers.DogController.postNewDogPersonality
POST    /newDogColor                controllers.DogController.postNewDogColor
GET     /newDogPersonality          controllers.DogController.getNewDogPersonality
GET     /newDogColor                controllers.DogController.getNewDogColor
GET     /newDog                     controllers.DogController.getNewDog
POST    /newDog                     controllers.DogController.postNewDog

GET     /newLocation                controllers.LocationController.getNewLocation
POST    /newLocation                controllers.LocationController.postNewLocation
GET     /location/:id               controllers.LocationController.getLocation(id:Integer)
